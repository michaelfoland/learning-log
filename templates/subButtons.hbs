<!-- This <div> is what slides -->
<div class="sub-button-group__button-container">
  {{#each this}}
    <button data-target="{{this}}" class="sub-button">{{this}}</button>
  {{/each}}
</div>

{{!-- This needs to be visible on the top row no matter what --}}
<div class="sub-button-nav-button-container">
  <!-- replace these buttons with proper svg icons at some point -->
  <button type="button" role="button" class="previous-row-button sub-button-nav" data-nav-direction="backward" >
    <svg width="20" height="12">
      <polyline points="2 10, 10 3, 18 10" fill="transparent" stroke-width="3" />
    </svg>
  </button>
  <span class="flex-spacer"></span>
  <button type="button" role="button" class="next-row-button sub-button-nav" data-nav-direction="forward">
    <svg width="20" height="12">
      <polyline points="2 2, 10 9, 18 2" fill="transparent" stroke-width="3" />
    </svg>
  </button>
</div>